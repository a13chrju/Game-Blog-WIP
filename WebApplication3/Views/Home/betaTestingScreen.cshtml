@model List<WebApplication3.Models.blogg>
@{
    ViewBag.Title = "betaTestingScreen";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<header class="main-header" id="header">
    <div class="bg-color">
        <div class="container text-center">
            <div class="wrapper wow fadeInUp delay-05s paddingtop50">

                <h3 class="chris-title">KING OF THE ISLES</h3>
                <h4 class="sub-title">Want to give feedback? Download free now</h4>

                <a download href="~/Content/KingOfIsles.zip" class="btn btn-submit hidden-xs windowsbtn">Download Test Version Alpha 1.0</a>
                <a download href="~/Content/KingOfIsles.zip" class="btn btn-submit visible-xs">Download Alpha 1.0</a>
                <div class="spacer"></div>
                <p>24.1 MB <img src="~/Content/widnowsICon.png" /></p>
            </div>
        </div>
    </div>
</header>

@* section cards *@

<section class="section-padding wow fadeInUp delay-05s" id="AboutMe">
    <div class="container">
        <div class="row white">
            <div class="col-md-12 col-sm-12">
                <div class="section-title">
                    <h2 class="sub-headline">LATEST POSTS FROM MY DEVELOPER BLOG</h2>
                    <div class="row">

                        <div class="col-sm-12 col-md-12">


                            <div class="row" *ngIf="posts.length > 0">
                                @foreach (var item in Model)
                                {
                                    <div class="col-md-4 col-sm-6 col-xs-12" *ngFor="let post of posts">
                                        <a href="@Url.Action("FreeContent", "Home", new { postid = item.index})">
                                            <div class="card">
                                                <img src="http://christopherj-003-site1.gtempurl.com/pictures/@item.thumbnail" class="card-img-top" alt="...">
                                                <div class="card-body">
                                                    <h2 class="card-title">@item.titel</h2>
                                                    <p class="card-text">@item.text</p> @*hämtar short_desc from databasen och lägger din i text*@
                                                    <div class="small-spacer"></div>
                                                    <div class="btn btn-primary stick-btn-bottom">Open up</div>
                                                </div>
                                            </div>
                                        </a>

                                    </div>
                                }


                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
